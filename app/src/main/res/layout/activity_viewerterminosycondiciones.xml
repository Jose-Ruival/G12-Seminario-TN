<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".viewerterminosycondiciones"
    android:background="@color/clarito">

    <!-- Toolbar con imagen de términos y condiciones -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/medio"
        android:src="@drawable/acuerdo"
        android:elevation="4dp">

        <!-- Imagen representativa para Términos y Condiciones -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_description_24"
            android:contentDescription="Icono Términos y Condiciones"
            android:layout_gravity="start"
            android:padding="10dp" />

        <!-- Título de la Toolbar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Términos y Condiciones"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <!-- ScrollView para términos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/lorem_ipsum"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textColor="@color/black"/>
    </ScrollView>

    <!-- Checkbox para aceptar los términos -->
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=" Acepto los términos y condiciones "
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:background="@color/medio_clarito"/>

    <!-- Botón de confirmación -->
    <Button
        android:id="@+id/boton_aceptar_tyc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Aceptar"
        android:enabled="false"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:background="@color/medio_oscuro"
        android:drawableStart="@drawable/baseline_check_circle_24"
        android:drawablePadding="10dp"/>
</LinearLayout>


