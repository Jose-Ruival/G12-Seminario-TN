<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".viewerterminosycondiciones"
    android:background="@color/clarito">


    <!-- Titulo de la pantalla fondo negro y texto blanco -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Términos y Condiciones"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textColor="@color/black"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="@string/lorem_ipsum"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textColor="@color/black"/>
    </ScrollView>

    <!-- Checcbox para aceptar los terminos -->
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=" Acepto los términos y condiciones "
        android:fontFamily="monospace"/>

    <!-- Boton confirmacion de la aceptacion -->
    <Button
        android:id="@+id/boton_aceptar_tyc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Aceptar"
        android:enabled="false"
        android:fontFamily="monospace"
        android:textColor="@color/black"/>

</LinearLayout>

